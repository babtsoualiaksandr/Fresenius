@model IEnumerable<Fresenius.Data.Hospital>

@{
    ViewData["Title"] = "Index";
}



<script src="//api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>

<script src="//yandex.st/jquery/2.2.3/jquery.min.js" type="text/javascript"></script>

<script src="~/js/groups.js" type="text/javascript"></script>

<script src="~/js/object_list.js" type="text/javascript"></script>

<div class=" row">

    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8" id="map"><h3>Карта</h3></div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4" id="menu"></div>



    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.latitude)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.longitude)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nam)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.longitude)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>