@model Fresenius.Data.Equipment

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Equipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Equipments" method="post" enctype="multipart/form-data" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" id="InputImage" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <img id="img-preview" src="@Model.Image" asp-append-version="true" class="img-fluid" />
            </div>
            <div class="form-group">
                <input type="file" name="uploadedFile" multiple accept="image/*" class="btn btn-default" id="img" />

                <br />
                <a href="#" id="reset-img-preview" class=" btn btn-danger">Удалить изображения</a>
            </div>
            <div class="form-group">
                <label asp-for="RegNumber" class="control-label"></label>
                <input asp-for="RegNumber" class="form-control" />
                <span asp-validation-for="RegNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ps" class="control-label"></label> <input type="submit" value="Info" name="btn" class="btn btn-info" />

                <input value="@Model.Ps" asp-for="Ps" class="form-control" />

                <span asp-validation-for="Ps" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" name="btn" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

